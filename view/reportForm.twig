{% include 'head.twig'  %}
{% include 'navbar.twig'  %}
<div class="container">

<h1> Signaler un numéro :</h1>

	<form action="{{ settings.basepath }}post/report" method="POST" class="form-group">

		<div class="col-xs-12 col-md-4">
			<label for="country">Indicatif : </label>
			<div class="col-xs-11 col-xs-offset-1">
				{% include 'indicatifs.html' %}
			</div>
		</div>
		<div class="col-xs-12 col-md-8">
			<label for="number">Numéro :</label>
			<div class="col-xs-11 col-xs-offset-1">
				<input type="text" name="number" class="form-control">
			</div>
		</div>
		<div class="col-xs-12">
			<label for="resume">Commentaire :</label>
			<textarea name="resume" class="form-control " rows="5" id="comment"></textarea>
		</div>
		<div class="col-xs-12">
			<label for="type">Type de nuisance :</label>
			<select class="form-control" name="type">
				<option value="0">SMS</option>
				<option value="1">Téléphone</option>
				<option value="2">Les deux</option>
			</select>
		</div>


		<input type="text" name="author" hidden value="1">
		<input type="submit" class=" btn btn-primary btn-info col-md-offset-11">
	</form>

</div>

