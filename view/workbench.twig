{% if formdata is empty %}
<div class="container section2">
<h2>Cr√©ation de compte</h2>

<form class="formhorizontal" action="{{ settings.basepath }}subscribe/" method="post">
  <div class="">
    <div class="form-group">
      <label for="last" class="control-label col-xs-2">Nom</label>
      <div class="input-group col-xs-10">
        <div class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></div>
        <input class="form-control" type="text" name="last">
      </div>
    </div>
    <div class="form-group">
      <label for="first" class="control-label col-xs-2">Prenom</label>
      <div class="input-group col-xs-10">
        <div class=" input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></div>
        <input class="form-control"  type="text" name="first">
      </div>
    </div>
    <div class="form-group">
      <label for="pseudo" class="control-label col-xs-2">Pseudo</label>
      <div class="input-group col-xs-10">
        <div class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></div>
        <input class="form-control"  type="text" name="pseudo">
      </div>
    </div>
    <div class="form-group">
      <label for="password" class="control-label col-xs-2">Mot de passe</label>
      <div class="input-group col-xs-10">
        <div class="input-group-addon"><i class="fa fa-lock" aria-hidden="true"></i></div>
        <input class="form-control password"  type="password" name="password">
      </div>
    </div>
    <div class="form-group">
      <label for="confirm" class="control-label col-xs-2">Confirmation</label>
      <div class="input-group col-xs-10">
        <div class="input-group-addon"><i class="fa fa-lock" aria-hidden="true"></i></div>
        <input class="form-control"  type="password" name="confirm">
      </div>
    </div>
    <div class="form-group">
      <label for="email" class="control-label col-xs-2">Email</label>
      <div class="input-group col-xs-10">
        <div class="input-group-addon"><i class="fa fa-at" aria-hidden="true"></i></div>
        <input class="form-control"  type="email" name="mail">
      </div>
    </div>
    <button class="btn btn-primary btn-info pull-right" type="submit">Envoyer !</button>
</div>
</form>
</div>

{% endif %}
