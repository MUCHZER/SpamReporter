<div class="container">
	<div class="col-sm-12 col-md-7"> 
		<h1 class="text-center">{{ json.phone_number }}</h1>

		<form class="form-inline" action="#">
			<button class="btn btn-success col-sm-3" type="submit"> + "Non-Spam"</button>
			<button class="btn btn-danger col-sm-3 col-sm-offset-1" type="submit">- "Spam"</button>
		</form>
	</div>

	<div class="col-sm-12 col-md-5">
		<div>
			<span class="title">Signalé le : </span>
			<span>{{ results.datespam }}</span>
			<!--<img src="{{ settings.basepath }}img/type{{ results.type }}.png" class="float-right">-->
		</div>
		<div>
			<span class="title">Signalé par :</span>
			<span>{{ results.pseudo }}</span>
		</div>
		<div>
			<h5>Remarque de l'auteur :</h5>
			<p>{{ results.resume }}</p>
		</div>	
	</div>
	
</div>


<div id="commentArea" class="container">

{% include 'comForm.twig'  %}

{% for com in com %}
	<div class="row">
		<div class="col-sm-3">
			<h5>Par : {{ com.auteur }}</h5>
			<h5>Le: {{ com.date }} </h5>
		</div>
		<div class="col-sm-9">
			<p>{{ com.comment }}</p>
		</div>
{% endfor %}


	</div>
</div>

